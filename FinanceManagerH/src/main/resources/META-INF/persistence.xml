<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
<persistence-unit name="ru.kotovalexandr.financemanager.HModel">
    <properties>
        <property name="hibernate.hbm2ddl.auto" value="update"/>
        <property name="hibernate.dialect" value="ru.kotovalexandr.financemanager.Hibernate.SQLiteDialect.SQLiteDialect"/>
        <property name="hibernate.connection.driver_class" value="org.sqlite.JDBC"/>
        <property name="hibernate.temp.use_jdbc_metadata_defaults" value="false"/>
        <property name="show_sql" value="true"/>
        <property name="hibernate.generate_statistics" value="false"/>
        <property name="hibernate.connection.url" value="jdbc:sqlite:finance.db"/>
    </properties>
</persistence-unit>
</persistence>